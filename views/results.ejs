<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la b√∫squeda: <%= productFinded %> </h2>
			</div>
			<% for (let products of results) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= products.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= products.img %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= (products.price * products.offer.offer) / 100 %></h2>
								<span><%= products.offer.offer %>% OFF</span>
								<p><%= products.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>